---
import { Icon } from 'astro-icon';
const { title, description, icon } = Astro.props;
---

<div
  class="bg-[var(--color-background)] p-6 rounded-lg shadow-md transform hover:scale-105 transition duration-300 border border-gray-200"
>
  {
    icon && (
      <div class="text-4xl text-[var(--color-primary)] mb-4">
        <Icon name={icon} class="h-10 w-10 mx-auto" />
      </div>
    )
  }
  <h3 class="text-xl font-bold text-[var(--color-text)]">{title}</h3>
  <p class="mt-2 text-[var(--color-text)] opacity-90">{description}</p>
</div>
