---
import { getCollection } from 'astro:content';

interface Props {
  limit?: number;
}

const { limit } = Astro.props;

let projects = await getCollection('projects');

if (limit) {
  projects = projects.slice(0, limit);
}
---

<section
  id="work"
  class="py-20 bg-dark/50 backdrop-blur-sm border-t border-b border-white/5"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
        Our <span class="gradient-text">Work</span>
      </h2>
      <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
        Explore some of our recent projects and success stories.
      </p>
    </div>

    <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <div class="group relative overflow-hidden rounded-xl border border-white/10 hover:border-accent/30 transition-all duration-300">
            <div class="aspect-w-16 aspect-h-9 bg-dark/50">
              <img
                src={project.data.image}
                alt={project.data.title}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-dark via-transparent to-transparent opacity-90" />
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-xl font-bold text-white">{project.data.title}</h3>
              <p class="mt-2 text-white/80">{project.data.description}</p>
              <div class="mt-4 flex items-center space-x-2">
                {project.data.technologies.map((tech) => (
                  <span class="px-2 py-1 text-xs rounded-full bg-primary/10 text-primary">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <a
                  href={`/projects/${project.slug}`}
                  class="text-accent text-sm font-medium inline-flex items-center"
                >
                  View case study <i class="fas fa-arrow-right ml-2" />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    {
      limit && (
        <div class="mt-12 text-center">
          <a
            href="/projects"
            class="inline-flex items-center px-8 py-4 border border-primary text-base font-medium rounded-full text-primary bg-transparent hover:bg-primary/10 transition-all cyber-button"
          >
            View all projects
          </a>
        </div>
      )
    }
  </div>
</section>
