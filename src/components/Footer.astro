---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Footer -->
<footer class="bg-dark border-t border-white/5">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8 xl:col-span-1">
        <div class="flex items-center">
          <span class="text-white text-2xl font-bold"
            >Tsurayya<span class="gradient-text">Engineering</span></span
          >
        </div>
        <p class="text-white/70 text-base">
          {t('footer.tagline')}
        </p>
        <div class="flex space-x-6">
          <a href="#" class="text-white/70 hover:text-accent">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-white/70 hover:text-accent">
            <i class="fab fa-linkedin-in"></i>
          </a>
          <a href="#" class="text-white/70 hover:text-accent">
            <i class="fab fa-github"></i>
          </a>
          <a href="#" class="text-white/70 hover:text-accent">
            <i class="fab fa-instagram"></i>
          </a>
        </div>
      </div>
      <div class="mt-12 grid grid-cols-2 gap-8 xl:mt-0 xl:col-span-2">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3
              class="text-sm font-semibold text-white tracking-wider uppercase"
            >
              {t('footer.solutions')}
            </h3>
            <div class="mt-4 space-y-4">
              <a
                href={`/${lang}/services`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.solutions.web')}
              </a>
              <a
                href={`/${lang}/services`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.solutions.ai')}
              </a>
              <a
                href={`/${lang}/services`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.solutions.cloud')}
              </a>
              <a
                href={`/${lang}/services`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.solutions.analytics')}
              </a>
            </div>
          </div>
          <div class="mt-12 md:mt-0">
            <h3
              class="text-sm font-semibold text-white tracking-wider uppercase"
            >
              {t('footer.company')}
            </h3>
            <div class="mt-4 space-y-4">
              <a
                href={`/${lang}/about`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.company.about')}
              </a>
              <a
                href={`/${lang}/careers`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.company.careers')}
              </a>
              <a
                href={`/${lang}/blog`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.company.blog')}
              </a>
              <a
                href={`/${lang}/contact`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.company.contact')}
              </a>
            </div>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3
              class="text-sm font-semibold text-white tracking-wider uppercase"
            >
              {t('footer.support')}
            </h3>
            <div class="mt-4 space-y-4">
              <a
                href={`/${lang}/support/documentation`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.support.docs')}
              </a>
              <a
                href={`/${lang}/support/guides`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.support.guides')}
              </a>
              <a
                href={`/${lang}/support/api-status`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.support.status')}
              </a>
              <!-- <a
                href={`/${lang}/contact`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.support.chat')}
              </a> -->
            </div>
          </div>
          <div class="mt-12 md:mt-0">
            <h3
              class="text-sm font-semibold text-white tracking-wider uppercase"
            >
              {t('footer.legal')}
            </h3>
            <div class="mt-4 space-y-4">
              <a
                href={`/${lang}/legal/privacy`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.legal.privacy')}
              </a>
              <a
                href={`/${lang}/legal/terms`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.legal.terms')}
              </a>
              <a
                href={`/${lang}/legal/cookie-policy`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.legal.cookies')}
              </a>
              <a
                href={`/${lang}/legal/licenses`}
                class="text-base text-white/70 hover:text-accent block"
              >
                {t('footer.legal.licenses')}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-12 border-t border-white/5 pt-8">
      <p
        class="text-base text-white/70 text-center"
        set:html={t('footer.copyright')}
      />
    </div>
  </div>
</footer>
