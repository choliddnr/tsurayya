---
import { Icon } from 'astro-icon/components';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about-section" class="py-20 bg-dark relative overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-5"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-dark via-primary/10 to-dark"></div>
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="lg:grid lg:grid-cols-12 lg:gap-12 items-center">
      <div class="lg:col-span-6">
        <div class="relative">
          <div class="relative rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
            <img src="/about_tsurayya_engineering.webp" alt="Tsurayya Engineering Team" class="w-full h-auto" />
            <div class="absolute inset-0 bg-gradient-to-t from-dark via-transparent to-transparent"></div>
          </div>
          <div class="absolute -bottom-8 -right-8 w-40 h-40 bg-accent/10 backdrop-blur-md rounded-full border border-accent/20 flex items-center justify-center">
            <div class="text-center">
              <span class="block text-5xl font-bold text-accent">2+</span>
              <span class="block text-lg text-white/80" set:html={t('about.experience.years')}></span>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-16 lg:mt-0 lg:col-span-6">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl" set:html={t('about.title')}>
        </h2>
        <p class="mt-6 text-lg text-white/80">
          {t('about.p1')}
        </p>
        <p class="mt-4 text-lg text-white/80">
          {t('about.p2')}
        </p>
        <div class="mt-8">
          <a href="/about" class="inline-flex items-center px-8 py-4 border border-transparent text-base font-medium rounded-full text-dark bg-accent hover:bg-accent/90 transition-all cyber-button">
            {t('about.cta')}
            <Icon name="heroicons:arrow-right" class="w-5 h-5 ml-3" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
