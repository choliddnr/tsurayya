---
import { getCollection } from 'astro:content';

interface Props {
  limit?: number;
}

const { limit } = Astro.props;

let posts = await getCollection('blog');

if (limit) {
  posts = posts.slice(0, limit);
}
---

<section
  id="blog"
  class="py-20 bg-dark/50 backdrop-blur-sm border-t border-b border-white/5"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
        Latest <span class="gradient-text">Articles</span>
      </h2>
      <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
        Insights and updates from our team
      </p>
    </div>

    <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        posts.map((post) => (
          <div class="bg-dark/50 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg border border-white/5 hover:border-accent/30 transition-all duration-300 h-full">
            <a href={`/blog/${post.slug}`}>
              <div class="h-48 relative overflow-hidden">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-dark via-transparent to-transparent opacity-90" />
              </div>
              <div class="p-6">
                <div class="flex items-center text-sm text-white/60 mb-3">
                  <span>{post.data.pubDate.toDateString()}</span>
                  <span class="mx-2">â€¢</span>
                  <span>{post.data.author}</span>
                </div>
                <h3 class="text-xl font-bold text-white mb-3">
                  {post.data.title}
                </h3>
                <p class="text-white/70 mb-4">{post.data.description}</p>
                <div class="text-accent hover:text-accent/80 text-sm font-medium inline-flex items-center">
                  Read more <i class="fas fa-arrow-right ml-2" />
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>

    {
      limit && (
        <div class="mt-12 text-center">
          <a
            href="/blog"
            class="inline-flex items-center px-6 py-3 border border-primary text-base font-medium rounded-md text-primary bg-transparent hover:bg-primary/10 transition-all cyber-button"
          >
            View all articles
          </a>
        </div>
      )
    }
  </div>
</section>
