---
import { getCollection } from 'astro:content';
import { Icon } from 'astro-icon/components';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

export function getStaticPaths() {
  return [{ params: { locale: 'en' } }, { params: { locale: 'id' } }];
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
  limit?: number;
}

const { limit } = Astro.props;

let posts = (
  await getCollection('blog', ({ data }) => data.lang === lang)
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// let posts = (await getCollection('blog')).sort(
//   (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
// );

if (limit) {
  posts = posts.slice(0, limit);
}
---

<section
  id="blog-section"
  class="py-20 bg-dark/50 backdrop-blur-sm border-t border-b border-white/5"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2
        class="text-3xl font-extrabold text-white sm:text-4xl"
        set:html={t('blog.title')}
      />
      <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
        {t('blog.subtitle')}
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        posts.map((post) => (
          <div class="post-item bg-dark/50 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg border border-white/5 hover:border-accent/30 transition-all duration-300 h-full flex flex-col">
            <a href={`/blog/${post.slug}`} class="flex flex-col h-full group">
              <div class="h-48 relative overflow-hidden">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-dark via-dark/50 to-transparent" />
              </div>
              <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center text-sm text-white/60 mb-3">
                  <span>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </span>
                </div>
                <h3 class="text-xl font-bold text-white mb-3 flex-grow group-hover:text-accent transition-colors">
                  {post.data.title}
                </h3>
                <p class="text-white/70 mb-4 text-base">
                  {post.data.description}
                </p>
                <div class="mt-auto text-accent hover:text-accent/80 text-sm font-medium inline-flex items-center">
                  {t('blog.readMore')}
                  <Icon
                    name="heroicons:arrow-right"
                    class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1"
                  />
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>

    <div class="mt-16 text-center">
      <a
        href="/blog"
        class="inline-flex items-center px-8 py-4 border border-primary text-base font-medium rounded-full text-primary bg-transparent hover:bg-primary/10 transition-all cyber-button"
      >
        {t('blog.viewAll')}
      </a>
    </div>
  </div>
</section>
