<script>
  import { AutoScroll } from "@splidejs/splide-extension-auto-scroll";
  import { Splide } from "@splidejs/splide";
  document.addEventListener("DOMContentLoaded", function () {
    new Splide("#tech-carousel", {
      type: "loop",
      gap: "1rem",
      drag: "free",
      arrows: false,
      pagination: false,
      perPage: 6,
      autoScroll: {
        pauseOnHover: false,
        pauseOnFocus: false,
        speed: 1,
      },
      breakpoints: {
        1024: { perPage: 4 },
        768: { perPage: 3 },
        640: { perPage: 2 },
      },
    }).mount({ AutoScroll });
  });
</script>
