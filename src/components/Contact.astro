<section
    id="contact"
    class="py-20 bg-gradient-to-br from-dark via-primary/10 to-dark"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-8">
        <div class="lg:col-span-5">
          <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
            Get in <span class="gradient-text">Touch</span>
          </h2>
          <p class="mt-4 text-lg text-white/80">
            Whether you're planning your next big project or need help improving an existing system, weâ€™re here to help.
          </p>
          <div class="mt-8">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div
                  class="flex items-center justify-center h-12 w-12 rounded-md bg-primary/10 text-primary"
                >
                  <i class="fas fa-envelope"></i>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-white">Email:</h3>
                <p class="mt-2 text-accent">hello@tsurayya.com</p>
              </div>
            </div>
            <div class="mt-6 flex items-start">
              <div class="flex-shrink-0">
                <div
                  class="flex items-center justify-center h-12 w-12 rounded-md bg-primary/10 text-primary"
                >
                  <i class="fas fa-globe text-primary"></i>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-white">Website:</h3>
                <p class="mt-2 text-accent">www.tsurayya.com</p>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-12 lg:mt-0 lg:col-span-7">
          <div
            class="bg-dark/50 backdrop-blur-sm rounded-xl shadow-xl overflow-hidden border border-white/10"
          >
            <div class="px-6 py-8 sm:p-10">
              <form>
                <div class="grid grid-cols-1 gap-y-6 gap-x-8 sm:grid-cols-2">
                  <div>
                    <label
                      for="first-name"
                      class="block text-sm font-medium text-white/80"
                      >First name</label
                    >
                    <div class="mt-1">
                      <input
                        type="text"
                        name="first-name"
                        id="first-name"
                        autocomplete="given-name"
                        class="py-3 px-4 block w-full bg-dark/50 border border-white/10 rounded-md text-white focus:ring-accent focus:border-accent"
                      />
                    </div>
                  </div>
                  <div>
                    <label
                      for="last-name"
                      class="block text-sm font-medium text-white/80"
                      >Last name</label
                    >
                    <div class="mt-1">
                      <input
                        type="text"
                        name="last-name"
                        id="last-name"
                        autocomplete="family-name"
                        class="py-3 px-4 block w-full bg-dark/50 border border-white/10 rounded-md text-white focus:ring-accent focus:border-accent"
                      />
                    </div>
                  </div>
                  <div class="sm:col-span-2">
                    <label
                      for="email"
                      class="block text-sm font-medium text-white/80"
                      >Email</label
                    >
                    <div class="mt-1">
                      <input
                        id="email"
                        name="email"
                        type="email"
                        autocomplete="email"
                        class="py-3 px-4 block w-full bg-dark/50 border border-white/10 rounded-md text-white focus:ring-accent focus:border-accent"
                      />
                    </div>
                  </div>
                  <div class="sm:col-span-2">
                    <label
                      for="phone"
                      class="block text-sm font-medium text-white/80"
                      >Phone number</label
                    >
                    <div class="mt-1">
                      <input
                        type="text"
                        name="phone"
                        id="phone"
                        autocomplete="tel"
                        class="py-3 px-4 block w-full bg-dark/50 border border-white/10 rounded-md text-white focus:ring-accent focus:border-accent"
                      />
                    </div>
                  </div>
                  <div class="sm:col-span-2">
                    <label
                      for="message"
                      class="block text-sm font-medium text-white/80"
                      >Message</label
                    >
                    <div class="mt-1">
                      <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="py-3 px-4 block w-full bg-dark/50 border border-white/10 rounded-md text-white focus:ring-accent focus:border-accent"
                      ></textarea>
                    </div>
                  </div>
                </div>
                <div class="mt-8 flex">
                  <button
                    type="submit"
                    class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-dark bg-accent hover:bg-accent/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition-all cyber-button"
                  >
                    Send Message
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>