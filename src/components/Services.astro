---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="services"
  class="pb-20 bg-dark/50 backdrop-blur-sm"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Custom Website & Web App Development -->
      <div
        class="service-card bg-dark/50 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg border border-white/5 transition-all duration-300 ease-in-out"
      >
        <div
          class="h-48 bg-gradient-to-r from-primary to-accent flex items-center justify-center relative overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10"
          >
          </div>
          <i class="fas fa-laptop-code text-white text-6xl relative z-10"></i>
        </div>
        <div class="p-8">
          <div class="flex items-center mb-4">
            <div
              class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mr-4"
            >
              <i class="fas fa-code text-primary"></i>
            </div>
            <h3 class="text-xl font-bold text-white">
              {t('services.web.title')}
            </h3>
          </div>
          <p class="text-white/70 mb-6">
            {t('services.web.description')}
          </p>
          <ul class="space-y-3 text-white/80">
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.web.item1')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.web.item2')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.web.item3')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.web.item4')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.web.item5')}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- AI Integration & Automation -->
      <div
        class="service-card bg-dark/50 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg border border-white/5 transition-all duration-300 ease-in-out"
      >
        <div
          class="h-48 bg-gradient-to-r from-primary to-accent flex items-center justify-center relative overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10"
          >
          </div>
          <i class="fas fa-robot text-white text-6xl relative z-10"></i>
        </div>
        <div class="p-8">
          <div class="flex items-center mb-4">
            <div
              class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mr-4"
            >
              <i class="fas fa-brain text-primary"></i>
            </div>
            <h3 class="text-xl font-bold text-white">
              {t('services.ai.title')}
            </h3>
          </div>
          <p class="text-white/70 mb-6">
            {t('services.ai.description')}
          </p>
          <ul class="space-y-3 text-white/80">
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.ai.item1')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.ai.item2')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.ai.item3')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.ai.item4')}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Infrastructure Management -->
      <div
        class="service-card bg-dark/50 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg border border-white/5 transition-all duration-300 ease-in-out"
      >
        <div
          class="h-48 bg-gradient-to-r from-primary to-accent flex items-center justify-center relative overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10"
          >
          </div>
          <i class="fas fa-server text-white text-6xl relative z-10"></i>
        </div>
        <div class="p-8">
          <div class="flex items-center mb-4">
            <div
              class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mr-4"
            >
              <i class="fas fa-cloud text-primary"></i>
            </div>
            <h3 class="text-xl font-bold text-white">
              {t('services.infra.title')}
            </h3>
          </div>
          <p class="text-white/70 mb-6">
            {t('services.infra.description')}
          </p>
          <ul class="space-y-3 text-white/80">
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.infra.item1')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.infra.item2')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.infra.item3')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.infra.item4')}</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-accent mt-1 mr-3"></i>
              <span>{t('services.infra.item5')}</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
