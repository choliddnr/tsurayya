---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="py-20 bg-dark/50 backdrop-blur-sm border-t border-b border-white/5"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl" set:html={t('wcu.title')}>
      </h2>
      <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
        {t('wcu.subtitle')}
      </p>
    </div>

    <div class="mt-16 grid gap-8 md:grid-cols-3">
      <!-- Reason 1 -->
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all"
      >
        <div
          class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6"
        >
          <i class="fas fa-cogs text-primary text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">{t('wcu.reason1.title')}</h3>
        <p class="text-white/70">
          {t('wcu.reason1.desc')}
        </p>
      </div>

      <!-- Reason 2 -->
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all"
      >
        <div
          class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6"
        >
          <i class="fas fa-shield-alt text-primary text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">
          {t('wcu.reason2.title')}
        </h3>
        <p class="text-white/70">
          {t('wcu.reason2.desc')}
        </p>
      </div>

      <!-- Reason 3 -->
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all"
      >
        <div
          class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6"
        >
          <i class="fas fa-robot text-primary text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">{t('wcu.reason3.title')}</h3>
        <p class="text-white/70">
          {t('wcu.reason3.desc')}
        </p>
      </div>

      <!-- Reason 4 -->
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all"
      >
        <div
          class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6"
        >
          <i class="fas fa-handshake text-primary text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">
          {t('wcu.reason4.title')}
        </h3>
        <p class="text-white/70">{t('wcu.reason4.desc')}</p>
      </div>

      <!-- Reason 5 -->
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all"
      >
        <div
          class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-6"
        >
          <i class="fas fa-chart-line text-primary text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold text-white mb-4">{t('wcu.reason5.title')}</h3>
        <p class="text-white/70">{t('wcu.reason5.desc')}</p>
      </div>
    </div>
  </div>
</section>
