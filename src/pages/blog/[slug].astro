---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <section class="py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl">
          {post.data.title}
        </h1>
        <div class="mt-4 text-white/60">
          <span>{post.data.pubDate.toDateString()}</span>
          <span class="mx-2">â€¢</span>
          <span>{post.data.author}, {post.data.authorTitle}</span>
        </div>
      </div>
      {
        post.data.image && (
          <img
            src={post.data.image}
            alt={post.data.title}
            class="w-full h-auto rounded-lg mb-8"
          />
        )
      }
      <div class="prose prose-invert mx-auto">
        <Content />
      </div>

      <div class="mt-12 text-center">
        <h3 class="text-xl font-bold text-white mb-4">Share this post</h3>
        <div class="flex justify-center space-x-4">
          <a href={`https://twitter.com/intent/tweet?url=${Astro.url.href}&text=${encodeURIComponent(post.data.title)}`} target="_blank" rel="noopener noreferrer" class="text-white/60 hover:text-accent">
            <i class="fab fa-twitter text-2xl"></i>
          </a>
          <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${Astro.url.href}&title=${encodeURIComponent(post.data.title)}&summary=${encodeURIComponent(post.data.description)}`} target="_blank" rel="noopener noreferrer" class="text-white/60 hover:text-accent">
            <i class="fab fa-linkedin text-2xl"></i>
          </a>
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url.href}`} target="_blank" rel="noopener noreferrer" class="text-white/60 hover:text-accent">
            <i class="fab fa-facebook text-2xl"></i>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
