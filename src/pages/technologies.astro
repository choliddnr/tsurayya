---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const technologies = await getCollection("technologies");
---

<Layout title="Our Technologies">
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl">
          Our <span class="gradient-text">Technologies</span>
        </h1>
        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
          We work with the most advanced and in-demand technologies across
          industries.
        </p>
      </div>

      <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {technologies.map((tech) => (
          <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all duration-300">
            <div class="flex items-center mb-4">
              <i class={`${tech.data.icon} text-5xl text-accent mr-4`}></i>
              <h3 class="text-2xl font-bold text-white">{tech.data.title}</h3>
            </div>
            <p class="text-white/70 mb-4">{tech.data.description}</p>

            <h4 class="text-lg font-semibold text-white mb-2">Pros:</h4>
            <ul class="list-disc list-inside text-white/70 mb-4">
              {tech.data.pros.map((pro) => (
                <li>{pro}</li>
              ))}
            </ul>

            <h4 class="text-lg font-semibold text-white mb-2">Cons:</h4>
            <ul class="list-disc list-inside text-white/70 mb-4">
              {tech.data.cons.map((con) => (
                <li>{con}</li>
              ))}
            </ul>

            <h4 class="text-lg font-semibold text-white mb-2">Use Cases:</h4>
            <ul class="list-disc list-inside text-white/70">
              {tech.data.useCases.map((useCase) => (
                <li>{useCase}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>