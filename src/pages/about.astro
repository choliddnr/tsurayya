---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const teamMembers = [
  {
    name: 'Cholid',
    role: 'Founder & CEO',
    avatar: 'https://avatars.githubusercontent.com/u/82588049?v=4',
    bio: 'Visionary leader with a passion for building innovative solutions that drive business growth.',
    social: {
      twitter: '#',
      linkedin: '#',
      github: 'https://github.com/cholid-fajri',
    },
  },
  // Add more team members here
];

const timelineEvents = [
  {
    year: '2023',
    title: 'Company Founded',
    description: 'Tsurayya Engineering was born with a mission to provide cutting-edge technology solutions.',
  },
  {
    year: '2024',
    title: 'First Major Project',
    description: 'Successfully delivered a complex e-commerce platform for a leading retail brand.',
  },
  {
    year: '2025',
    title: 'Expanding Our Services',
    description: 'Introduced AI and machine learning services to help businesses leverage data-driven insights.',
  },
];
---

<Layout 
  title="About Us | Tsurayya"
  description="Learn about Tsurayya Engineering, our mission, our vision, and our values. Discover how we are innovating for a digital-first world."
>
  <section id="about-hero" class="relative py-24 bg-dark/50 backdrop-blur-sm">
    <div class="absolute inset-0 bg-gradient-to-b from-dark via-primary/10 to-dark opacity-50"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl">
        We are <span class="gradient-text">Tsurayya Engineering</span>
      </h1>
      <p class="mt-6 max-w-3xl mx-auto text-xl text-white/80">
        Innovating for a digital-first world. We craft intelligent, scalable, and secure technology solutions to empower businesses and drive their success.
      </p>
    </div>
  </section>

  <section id="mission-vision" class="py-20 bg-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="bg-dark/50 backdrop-blur-sm p-8 rounded-2xl border border-white/10">
          <h2 class="text-3xl font-bold text-white mb-4"><span class="gradient-text">Our Mission</span></h2>
          <p class="text-lg text-white/80">
            To simplify technology and build custom solutions that solve real-world problems, enabling our clients to focus on what they do best: growing their business.
          </p>
        </div>
        <div class="bg-dark/50 backdrop-blur-sm p-8 rounded-2xl border border-white/10">
          <h2 class="text-3xl font-bold text-white mb-4"><span class="gradient-text">Our Vision</span></h2>
          <p class="text-lg text-white/80">
            To be a trusted partner in digital transformation, recognized for our commitment to innovation, quality, and client success in an AI-driven future.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="our-values" class="py-20 bg-dark/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">Our <span class="gradient-text">Values</span></h2>
        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">The principles that guide our work and culture.</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 text-center">
          <h3 class="text-2xl font-bold text-white mb-4">Innovation</h3>
          <p class="text-white/70">We are driven by a passion for innovation and a desire to push the boundaries of what's possible.</p>
        </div>
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 text-center">
          <h3 class="text-2xl font-bold text-white mb-4">Integrity</h3>
          <p class="text-white/70">We believe in transparency, honesty, and a commitment to doing what's right for our clients.</p>
        </div>
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 text-center">
          <h3 class="text-2xl font-bold text-white mb-4">Excellence</h3>
          <p class="text-white/70">We are committed to delivering the highest quality work and exceeding our clients' expectations.</p>
        </div>
      </div>
    </div>
  </section>

  <section id="timeline" class="py-20 bg-dark/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">Our <span class="gradient-text">Journey</span></h2>
        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">A brief history of our milestones and achievements.</p>
      </div>
      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-white/10"></div>
        {timelineEvents.map((event, index) => (
          <div class={`flex items-center w-full mb-8 ${index % 2 === 0 ? 'flex-row-reverse' : ''}`}>
            <div class="w-1/2"></div>
            <div class="w-1/2 px-8">
              <div class={`bg-dark p-6 rounded-xl border border-white/10 shadow-lg text-left ${index % 2 === 0 ? 'text-right' : ''}`}>
                <div class="text-accent font-bold text-2xl mb-2">{event.year}</div>
                <h3 class="text-xl font-bold text-white mb-2">{event.title}</h3>
                <p class="text-white/70">{event.description}</p>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-6 h-6 bg-accent rounded-full border-4 border-dark"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section id="team" class="py-20 bg-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">Meet Our <span class="gradient-text">Team</span></h2>
        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">The passionate minds behind our success.</p>
      </div>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 justify-center">
        {teamMembers.map(member => (
          <div class="bg-dark/50 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 text-center p-8 transition-all duration-300 hover:border-accent/30 hover:shadow-2xl">
            <img src={member.avatar} alt={member.name} class="w-32 h-32 rounded-full mx-auto mb-6 border-4 border-white/10" />
            <h3 class="text-2xl font-bold text-white">{member.name}</h3>
            <p class="text-accent font-semibold mb-4">{member.role}</p>
            <p class="text-white/70 mb-6">{member.bio}</p>
            <div class="flex justify-center space-x-4">
              {member.social.twitter && <a href={member.social.twitter} class="text-white/60 hover:text-accent"><Icon name="mdi:twitter" class="w-6 h-6" /></a>}
              {member.social.linkedin && <a href={member.social.linkedin} class="text-white/60 hover:text-accent"><Icon name="mdi:linkedin" class="w-6 h-6" /></a>}
              {member.social.github && <a href={member.social.github} class="text-white/60 hover:text-accent"><Icon name="mdi:github" class="w-6 h-6" /></a>}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>