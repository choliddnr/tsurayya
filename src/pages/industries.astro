---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Industries We Serve">
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl">
          Industries We <span class="gradient-text">Serve</span>
        </h1>
        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
          We adapt technology to meet your goals and speak your language.
        </p>
      </div>

      <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Food & Beverage -->
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all">
          <h3 class="text-xl font-bold text-white mb-2">Food & Beverage</h3>
          <ul class="text-white/70 list-disc list-inside space-y-1">
            <li>Online ordering systems</li>
            <li>Menu management</li>
            <li>AI for customer service</li>
          </ul>
        </div>
        <!-- Retail & eCommerce -->
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all">
          <h3 class="text-xl font-bold text-white mb-2">Retail & eCommerce</h3>
          <ul class="text-white/70 list-disc list-inside space-y-1">
            <li>Product recommendation bots</li>
            <li>Inventory dashboards</li>
            <li>Chat-based ordering</li>
          </ul>
        </div>
        <!-- Agencies & Freelancers -->
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all">
          <h3 class="text-xl font-bold text-white mb-2">Agencies & Freelancers</h3>
          <ul class="text-white/70 list-disc list-inside space-y-1">
            <li>Custom client portals</li>
            <li>Automation of reports or proposals</li>
            <li>Portfolio websites</li>
          </ul>
        </div>
        <!-- Health & Wellness -->
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all">
          <h3 class="text-xl font-bold text-white mb-2">Health & Wellness</h3>
          <ul class="text-white/70 list-disc list-inside space-y-1">
            <li>Appointment booking apps</li>
            <li>AI agents for basic support</li>
            <li>Internal scheduling tools</li>
          </ul>
        </div>
        <!-- Education & Training -->
        <div class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:border-accent/30 transition-all">
          <h3 class="text-xl font-bold text-white mb-2">Education & Training</h3>
          <ul class="text-white/70 list-disc list-inside space-y-1">
            <li>Course platforms</li>
            <li>AI tutors or FAQ bots</li>
            <li>Certification dashboards</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>
