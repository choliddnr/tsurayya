---
import { Icon } from 'astro-icon/components';
import Layout from '../../layouts/Layout.astro';
import PageHero from '../../components/PageHero.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [{ params: { locale: 'en' } }, { params: { locale: 'id' } }];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const teamMembers = [
  {
    name: 'Cholid',
    role: 'Founder & CEO',
    avatar: 'https://avatars.githubusercontent.com/u/82588049?v=4',
    bio:
      lang === 'id'
        ? 'Pemimpin visioner dengan semangat untuk membangun solusi inovatif yang mendorong pertumbuhan bisnis.'
        : 'Visionary leader with a passion for building innovative solutions that drive business growth.',
    social: {
      twitter: '#',
      linkedin: '#',
      github: 'https://github.com/cholid-fajri',
    },
  },
  // Add more team members here
];

const timelineEvents = [
  {
    year: '2023',
    title: lang === 'id' ? 'Perusahaan Didirikan' : 'Company Founded',
    description:
      lang === 'id'
        ? 'Tsurayya Engineering lahir dengan misi untuk menyediakan solusi teknologi mutakhir.'
        : 'Tsurayya Engineering was born with a mission to provide cutting-edge technology solutions.',
  },
  {
    year: '2024',
    title: lang === 'id' ? 'Proyek Besar Pertama' : 'First Major Project',
    description:
      lang === 'id'
        ? 'Berhasil mengirimkan platform e-commerce yang kompleks untuk merek ritel terkemuka.'
        : 'Successfully delivered a complex e-commerce platform for a leading retail brand.',
  },
  {
    year: '2025',
    title: lang === 'id' ? 'Memperluas Layanan Kami' : 'Expanding Our Services',
    description:
      lang === 'id'
        ? 'Memperkenalkan layanan AI dan machine learning untuk membantu bisnis memanfaatkan wawasan berbasis data.'
        : 'Introduced AI and machine learning services to help businesses leverage data-driven insights.',
  },
];
---

<Layout title={t('page.about.title')} description={t('page.about.description')}>
  <PageHero
    title={t('page.about.hero.title')}
    description={t('page.about.hero.description')}
  />

  <section id="mission-vision" class="py-20 bg-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div
          class="bg-dark/50 backdrop-blur-sm p-8 rounded-2xl border border-white/10"
        >
          <h2 class="text-3xl font-bold text-white mb-4">
            <span class="gradient-text"
              >{t('page.about.content.mission.title')}</span
            >
          </h2>

          <p class="text-lg text-white/80">
            {t('page.about.content.mission.description')}
          </p>
        </div>

        <div
          class="bg-dark/50 backdrop-blur-sm p-8 rounded-2xl border border-white/10"
        >
          <h2 class="text-3xl font-bold text-white mb-4">
            <span class="gradient-text"
              >{t('page.about.content.vision.title')}</span
            >
          </h2>

          <p class="text-lg text-white/80">
            {t('page.about.content.vision.description')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="our-values" class="py-20 bg-dark/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2
          class="text-3xl font-extrabold text-white sm:text-4xl"
          set:html={t('page.about.content.values.title')}
        />

        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
          {t('page.about.content.values.subtitle')}
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 text-center"
        >
          <h3 class="text-2xl font-bold text-white mb-4">
            {t('page.about.content.values.innovation.title')}
          </h3>

          <p class="text-white/70">
            {t('page.about.content.values.innovation.description')}
          </p>
        </div>

        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 text-center"
        >
          <h3 class="text-2xl font-bold text-white mb-4">
            {t('page.about.content.values.integrity.title')}
          </h3>

          <p class="text-white/70">
            {t('page.about.content.values.integrity.description')}
          </p>
        </div>

        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 text-center"
        >
          <h3 class="text-2xl font-bold text-white mb-4">
            {t('page.about.content.values.excellence.title')}
          </h3>

          <p class="text-white/70">
            {t('page.about.content.values.excellence.description')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="timeline" class="py-20 bg-dark/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2
          class="text-3xl font-extrabold text-white sm:text-4xl"
          set:html={t('page.about.content.journey.title')}
        />

        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
          {t('page.about.content.journey.subtitle')}
        </p>
      </div>

      <div class="relative">
        <div
          class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-white/10"
        >
        </div>

        {
          timelineEvents.map((event, index) => (
            <div
              class={`flex items-center w-full mb-8 ${
                index % 2 === 0 ? 'flex-row-reverse' : ''
              }`}
            >
              <div class="w-1/2" />

              <div class="w-1/2 px-8">
                <div
                  class={`bg-dark p-6 rounded-xl border border-white/10 shadow-lg text-left ${
                    index % 2 === 0 ? 'text-right' : ''
                  }`}
                >
                  <div class="text-accent font-bold text-2xl mb-2">
                    {event.year}
                  </div>

                  <h3 class="text-xl font-bold text-white mb-2">
                    {event.title}
                  </h3>

                  <p class="text-white/70">{event.description}</p>
                </div>
              </div>

              <div class="absolute left-1/2 transform -translate-x-1/2 w-6 h-6 bg-accent rounded-full border-4 border-dark" />
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section id="team" class="py-20 bg-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2
          class="text-3xl font-extrabold text-white sm:text-4xl"
          set:html={t('page.about.content.team.title')}
        />

        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
          {t('page.about.content.team.subtitle')}
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 justify-center">
        {
          teamMembers.map((member) => (
            <div class="bg-dark/50 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 text-center p-8 transition-all duration-300 hover:border-accent/30 hover:shadow-2xl">
              <img
                src={member.avatar}
                alt={member.name}
                class="w-32 h-32 rounded-full mx-auto mb-6 border-4 border-white/10"
              />

              <h3 class="text-2xl font-bold text-white">{member.name}</h3>

              <p class="text-accent font-semibold mb-4">{member.role}</p>

              <p class="text-white/70 mb-6">{member.bio}</p>

              <div class="flex justify-center space-x-4">
                {member.social.twitter && (
                  <a
                    href={member.social.twitter}
                    class="text-white/60 hover:text-accent"
                  >
                    <Icon name="mdi:twitter" class="w-6 h-6" />
                  </a>
                )}

                {member.social.linkedin && (
                  <a
                    href={member.social.linkedin}
                    class="text-white/60 hover:text-accent"
                  >
                    <Icon name="mdi:linkedin" class="w-6 h-6" />
                  </a>
                )}

                {member.social.github && (
                  <a
                    href={member.social.github}
                    class="text-white/60 hover:text-accent"
                  >
                    <Icon name="mdi:github" class="w-6 h-6" />
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
