---
import Layout from '../../layouts/Layout.astro';
import PageHero from '../../components/PageHero.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [{ params: { locale: 'en' } }, { params: { locale: 'id' } }];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('page.careers.title')} description={t('page.careers.description')}>
  <PageHero
    title={t('page.careers.hero.title')}
    description={t('page.careers.hero.description')}
  />

  <div class="mt-16">
    <h2 class="text-3xl font-extrabold text-white text-center">
      {t('page.careers.content.openings.title')}
    </h2>
    <div class="mt-8 max-w-3xl mx-auto">
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 mb-8"
      >
        <h3 class="text-2xl font-bold text-white">
          {t('page.careers.content.openings.frontend.title')}
        </h3>
        <p class="text-white/70 mt-2">
          {t('page.careers.content.openings.frontend.description')}
        </p>
        <div class="mt-4">
          <a href="#" class="text-accent hover:underline"
            >{t('page.careers.content.openings.cta')}</a
          >
        </div>
      </div>
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 mb-8"
      >
        <h3 class="text-2xl font-bold text-white">
          {t('page.careers.content.openings.backend.title')}
        </h3>
        <p class="text-white/70 mt-2">
          {t('page.careers.content.openings.backend.description')}
        </p>
        <div class="mt-4">
          <a href="#" class="text-accent hover:underline"
            >{t('page.careers.content.openings.cta')}</a
          >
        </div>
      </div>
      <div
        class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
      >
        <h3 class="text-2xl font-bold text-white">
          {t('page.careers.content.openings.uxui.title')}
        </h3>
        <p class="text-white/70 mt-2">
          {t('page.careers.content.openings.uxui.description')}
        </p>
        <div class="mt-4">
          <a href="#" class="text-accent hover:underline"
            >{t('page.careers.content.openings.cta')}</a
          >
        </div>
      </div>
    </div>
  </div>
</Layout>
