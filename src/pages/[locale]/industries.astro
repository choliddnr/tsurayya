---
import Layout from '../../layouts/Layout.astro';
import PageHero from '../../components/PageHero.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return [{ params: { locale: 'en' } }, { params: { locale: 'id' } }];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('page.industries.title')} description={t('page.industries.description')}>
  <PageHero
    title={t('page.industries.hero.title')}
    description={t('page.industries.hero.description')}
  />
  <section id="industries" class="pb-20 bg-dark/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
        >
          <h3 class="text-2xl font-bold text-white">
            {t('page.industries.content.healthcare.title')}
          </h3>
          <p class="text-white/70 mt-2">
            {t('page.industries.content.healthcare.description')}
          </p>
        </div>
        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
        >
          <h3 class="text-2xl font-bold text-white">
            {t('page.industries.content.finance.title')}
          </h3>
          <p class="text-white/70 mt-2">
            {t('page.industries.content.finance.description')}
          </p>
        </div>
        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
        >
          <h3 class="text-2xl font-bold text-white">
            {t('page.industries.content.ecommerce.title')}
          </h3>
          <p class="text-white/70 mt-2">
            {t('page.industries.content.ecommerce.description')}
          </p>
        </div>
        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
        >
          <h3 class="text-2xl font-bold text-white">
            {t('page.industries.content.education.title')}
          </h3>
          <p class="text-white/70 mt-2">
            {t('page.industries.content.education.description')}
          </p>
        </div>
        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
        >
          <h3 class="text-2xl font-bold text-white">
            {t('page.industries.content.realestate.title')}
          </h3>
          <p class="text-white/70 mt-2">
            {t('page.industries.content.realestate.description')}
          </p>
        </div>
        <div
          class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
        >
          <h3 class="text-2xl font-bold text-white">
            {t('page.industries.content.logistics.title')}
          </h3>
          <p class="text-white/70 mt-2">
            {t('page.industries.content.logistics.description')}
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
