---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Documentation">
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl md:text-6xl">
          <span class="gradient-text">Documentation</span>
        </h1>
        <p class="mt-4 max-w-2xl text-xl text-white/70 mx-auto">
          Find everything you need to know about our products and services.
        </p>
      </div>

      <div class="mt-16">
        <div class="max-w-3xl mx-auto">
          <div
            class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 mb-8"
          >
            <h3 class="text-2xl font-bold text-white">Getting Started</h3>
            <p class="text-white/70 mt-2">
              Learn how to get started with our platform.
            </p>
            <div class="mt-4">
              <a href="#" class="text-accent hover:underline">Read More</a>
            </div>
          </div>
          <div
            class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10 mb-8"
          >
            <h3 class="text-2xl font-bold text-white">API Reference</h3>
            <p class="text-white/70 mt-2">
              Explore our API and learn how to integrate with our services.
            </p>
            <div class="mt-4">
              <a href="#" class="text-accent hover:underline">Read More</a>
            </div>
          </div>
          <div
            class="bg-dark/50 backdrop-blur-sm rounded-xl p-8 border border-white/10"
          >
            <h3 class="text-2xl font-bold text-white">Guides</h3>
            <p class="text-white/70 mt-2">
              Follow our step-by-step guides to get the most out of our
              platform.
            </p>
            <div class="mt-4">
              <a href="#" class="text-accent hover:underline">Read More</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
